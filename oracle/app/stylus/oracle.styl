@import "nib"

// First example, stylus syntax

.full-area {
	width 100vw
	height 100vh
}

.page-1 {
	position absolute
	left 0
	width 100vw
	height 100%
	background #1a1a1a
}

.img-landing
	padding 50px

.page-2 {
	position absolute
	left 0
	width 100%
	height 100%
	display none
}

.page-3 {
	position absolute
	left 100vw
	width 100vw
	height 100vh
}

.full-area {
	overflow auto
	width 200vw
	height 100vh
	margin-right auto
	margin-left auto
}

.start-button {
	position absolute
	left 50%
	top 50%
	transform translate(-65px,220px)
	height 50px
	width 130px
	border-radius 2px
	border none
	color white
 	transition all .35s ease-in
 	background #55acee
 	font-size 18px
 	font-family 'proxima nova rg'
}

.start-button:disabled {
	position absolute
	left 0
	top 0
	height 100%
	width 100%
	color white
	font-size 18px
	border-radius 0
	border none
 	transition all .35s ease-in
 	background #f2f2f2
 	transform translate(0px,0px)
}
