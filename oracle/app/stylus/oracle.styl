@import "nib"

// First example, stylus syntax

.full-area {
	width 100vw
	height 100vh
}

.page-1 {
	position absolute
	left 0
	width 100vw
	height 100%
	background #1a1a1a
}

.img-landing
	padding 50px

.page-2 {
	position absolute
	left 100%
	width 100%
	height 100%
	display none
}


.start-button {
	position absolute
	left 50%
	top 50%
	transform translate(-65px,220px)
	height 50px
	width 130px
	border-radius 2px
	border none
	color white
 	transition all .35s ease-in
 	background #55acee
 	font-size 18px
 	font-family 'proxima nova rg'
}

.start-button:disabled {
	position absolute
	left 0
	top 0
	height 100%
	width 100%
	color white
	font-size 18px
	border-radius 0
	border none
 	transition all .35s ease-in
 	background #f2f2f2
 	transform translate(0px,0px)
}

// Set colors as variables
colorone = #F2F2F2
colortwo = #CCC

// Set layout values as variables
wrapper_width = 1200
padding = 20

// Reusable code chunk for common heading values
headingStyle()
	font-family 'Proxima Nova Rg'
	font-weight 800
	line-height 2.618em

// Utilize the above to create styles
.wrapper
	background-color colorone
	border 1px solid colortwo
	width unit( wrapper_width - 2 * padding, px)
	padding unit( padding, px )
	margin 0 auto

	
.avatar
	float left
	margin-top 3px
	margin-left -58px
	width 48px
	height 48px
	border-radius 5px

.tweet
	border 1px solid #e1e8ed
	position relative
    min-height 51px
    padding 9px 12px

.content
    margin-left 58px
    display block
	width 590px

h1
	headingStyle()
	font-size 2em
	letter-spacing 1.2em

h2
	headingStyle()
	font-size 1.5em

.inner
	padding unit( padding, px )
	background-color colortwo

.post
	padding unit( padding, px )
	background-color colorone



