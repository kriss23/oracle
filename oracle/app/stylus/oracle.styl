}

.img-landing
	padding 50px

.page-2 {
	position absolute
	left 0
	width 100%
	height 100%
	z-index 1
	transition all 3s ease-in
	background-color rgba(85, 172, 238, 0)
}

.page-3 {
	position absolute
	background #f2f2f2
	left 0
	width 100vw
	height 100vh
}

.img-3-top
	margin-top 110px
.navbar
	position fixed
	top 0
	left 0
	right 0
	width 100vw
	height 100px
	display flex
	justify-content center
	flex-direction row
	flex-wrap wrap
	align-items center
	.nav-left
		flex 1
		display flex
		flex-direction column
		align-items flex-start
		margin-left 40px
	.nav-right
		flex 1
		padding-right 40px
		display flex
		flex-direction column
		align-items flex-end

.full-area {
	overflow auto
	width 200vw
	height 100vh
	margin-right auto
	margin-left auto
}

.start-button {
	position absolute
	left 50%
	top 50%
	transform translate(-65px,220px)
	height 50px
	width 130px
	border-radius 2px
	border none
	color white
 	transition all .35s ease-in
 	background #55acee
 	font-size 18px
 	font-family 'proxima nova rg'
}

.start-button:disabled {
	position absolute
	left 0
	top 0
	height 100%
	width 100%
	color white
	font-size 18px
	border-radius 0
	border none
 	transition all .35s ease-in
 	background #f2f2f2
 	transform translate(0px,0px)
}
